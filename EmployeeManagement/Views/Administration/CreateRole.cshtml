@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<h1>Create New Role</h1>

<div class="row col-6">
    <div class="col-md-12">
        @* IT WILL POST TO controller Aministration to action CreateRole *@
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-2">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control" id="emailInput" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Create Role</button>
        </form>
    </div>
</div>
