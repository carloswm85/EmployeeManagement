@inject SignInManager<IdentityUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeManagement</title>

    <!-- For Development -->
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js" asp-append-version="true"></script>
    </environment>

    <!-- For Staging or Production -->
    <environment exclude="Development">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
              rel="stylesheet"
              integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
              crossorigin="anonymous" />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT6DlR9w4kT2AO5smXKp6u9g6Zwk6TEuH0pHx6EM8E9z"
                crossorigin="anonymous"></script>
    </environment>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmployeeManagement.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="container">
    <header>
        <nav class="navbar navbar-expand-lg bg-dark bg-opacity-50 border-bottom border-body" data-bs-theme="dark">
            <div class="container-fluid px-5">
                <a class="navbar-brand d-flex align-items-center text-light hover-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/employees.png" alt="Logo" width="30" height="30" class="me-2">
                    EmployeeManagement
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- LEFT -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light hover-link" asp-area="" asp-controller="Home" asp-action="Index">List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light hover-link" asp-area="" asp-controller="Home" asp-action="Create">Create</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light hover-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <!-- RIGHT -->
                    <ul class="navbar-nav ms-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form method="post" asp-action="logout" asp-controller="account">
                                    <button type="submit" class="nav-link btn btn-link text-light py-0 logout-button">
                                        Logout (@User.Identity.Name)
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light hover-link" asp-area="" asp-controller="account" asp-action="register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light hover-link" asp-area="" asp-controller="account" asp-action="login">Login</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <main class="container p-5">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            &copy; 2024 - EmployeeManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: false)
    }
</body>
</html>
