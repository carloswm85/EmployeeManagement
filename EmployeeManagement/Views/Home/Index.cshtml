@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="card-deck d-flex flex-wrap justify-content-evenly">
    @foreach (var employee in Model)
    {
        <div class="card border border-dark-dimmed m-2 col-lg-3 col-md-4 col-sm-6">
            <!-- Card Header with Employee Name -->
            <div class="card-header text-center">
                <h3 class="h5">@employee.Name</h3>
            </div>

            <!-- Employee Photo -->
            <img class="card-img-top imageThumbnail" 
                 src="~/images/@(employee.PhotoPath ?? "noimage.jpg")" 
                 asp-append-version="true" 
                 alt="@employee.Name's Photo" />

            <!-- Card Footer with Action Buttons -->
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.EncryptedId"
                   class="btn btn-primary m-1" target="_blank">View</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@employee.Id"
                   class="btn btn-info m-1">Edit</a>
                <button type="button" class="btn btn-danger m-1"
                        onclick="confirmDelete(@employee.Id)">Delete</button>
            </div>
        </div>
    }
</div>
