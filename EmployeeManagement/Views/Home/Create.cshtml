@model EmployeeCreateViewModel

@{
	ViewBag.Title = "Create Employee";
}

<form 
	asp-controller="Home" 
	asp-action="Create"
	method="post" 
	class="mt-3 p-3 col-6 border border-1"
	enctype="multipart/form-data" 
>
	
	<div class="form-group row m-2">
		<label asp-for="Name" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Name" class="form-control" placeholder="Name">
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	</div>
	
	<div class="form-group row m-2">
		<label asp-for="Email" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Email" class="form-control" placeholder="Email">
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row m-2">
		<label asp-for="Department" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<select asp-for="Department" class="form-select mr-sm-2"
					asp-items="Html.GetEnumSelectList<Dept>()">
						<option value="">Please Select</option>
					</select>
			<span asp-validation-for="Department" class="text-danger"></span>
		</div>
	</div>

	@*
		asp-for tag helper is set to "Photo" property. "Photo" property type is IFormFile
		so at runtime asp.net core generates file upload control (input type=file)
	*@

	<div class="form-group row m-2">
		<label asp-for="Photos" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<div class="custom-file">
				<input multiple asp-for="Photos" class="form-control custom-file-input">
			</div>
		</div>
	</div>

	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group row m-2">
		<div class="col-6">
			<button type="submit" class="btn btn-lg btn-primary">Create</button>
		</div>
	</div>

