@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

<h1>User Registration</h1>

<div class="row col-6">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-2">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" id="emailInput" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary mt-3">Register</button>
        </form>
    </div>

    <div class="mt-3 d-flex align-content-center align-items-center">
        <div>
            Insert existing username: <i>Pragim1@pragimtech.com</i>
        </div>
        <button class="btn btn-outline-secondary btn-sm copy-btn"
                onclick="insertUserAndPassword()" title="Automatically paste username.">
            <i class="bi bi-person-circle"></i> <!-- Clipboard icon -->
        </button>
    </div>
</div>

<script>
    function insertUserAndPassword() {
        const emailInput = document.getElementById('emailInput');
        const content = 'Pragim1@pragimtech.com';
        emailInput.value = content;
        console.log("Email autofilled.");
    }
</script>