@model LoginViewModel

@{
    ViewBag.Title = "User Login";
}

<h1>User Login</h1>

<div class="row col-6">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-2">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" id="emailInput" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" id="passwordInput" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>

    <div class="mt-3 d-flex align-content-center align-items-center">
        <p>
            <b>Admin only</b> role: <i>Pragim1@pragimtech.com</i>
            <a href="#" class="link-primary hover-link" 
                onclick="insertUserAndPassword('adminOnly')" title="Automatically paste username and password.">
            <i class="bi bi-person-circle"></i> <!-- Clipboard icon -->
            </a>
        </p>
    </div>

    <div class="d-flex align-content-center align-items-center">
        <p>
            <b>User only</b> role: <i>iAmuser1@pragimtech.com</i>
            <a href="#" class="link-primary hover-link"
               onclick="insertUserAndPassword('userOnly')" title="Automatically paste username and password.">
                <i class="bi bi-person-circle"></i> <!-- Clipboard icon -->
            </a>
        </p>
    </div>

    <div class="d-flex align-content-center align-items-center">
        <p>
            <b>Admin & User</b> role: <i>Test1@pragimtech.com</i>
            <a href="#" class="link-primary hover-link"
               onclick="insertUserAndPassword('adminAndUser')" title="Automatically paste username and password.">
                <i class="bi bi-person-circle"></i> <!-- Clipboard icon -->
            </a>
        </p>
    </div>
</div>

<script>
    function insertUserAndPassword(selection) {
        const emailInput = document.getElementById('emailInput');
        const passwordInput = document.getElementById('passwordInput');
        var content = '';

        console.log(selection);

        emailInput.value = '';
        passwordInput.value = '';

        switch (selection) {
            case 'adminOnly':
                content = 'Pragim1@pragimtech.com';
                break;
            case 'userOnly':
                content = 'iAmuser1@pragimtech.com';
                break;
            case 'adminAndUser':
                content = 'Test1@pragimtech.com';
                break;
            default:
                console.log('Something went wrong')
        }

        // Set the same value for email and password fields
        emailInput.value = content;
        passwordInput.value = content;

        // Optional: Log action or provide feedback
        console.log("Credentials autofilled.");
    }
</script>