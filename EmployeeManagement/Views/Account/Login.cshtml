@model LoginViewModel

@{
    ViewBag.Title = "User Login";
}


@for (int i = 0; i < Model.ExternalLogins.Count; i++)
{
    // Contain references to Google, Facebook, etc logins.
    <input type="hidden" asp-for="ExternalLogins[i]" />
}

<div class="row col-12">

    <div class="col-md-6">
        <div class="col-12">
            <h1>Local Account Login</h1>
            <hr />
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-2">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" id="emailInput" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" id="passwordInput" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" id="rememberInput" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Login →</button>
            </form>
        </div>

        <hr />

        <div class="col-12">
            <div class="mt-3 d-flex align-content-center align-items-center">
                <a href="#" class="link-primary hover-link"
                   onclick="insertUserAndPassword('admin')" title="Automatically paste username and password.">
                    <p>
                        <i>Pragim1@pragimtech.com</i> - <b>Admin role</b>
                        <i class="bi bi-person-circle icon-blue"></i> <!-- Clipboard icon -->
                    </p>
                </a>
            </div>

            <div class="d-flex align-content-center align-items-center">
                <a href="#" class="link-primary hover-link"
                   onclick="insertUserAndPassword('superAdmin')" title="Automatically paste username and password.">
                    <p>
                        <i>SuperAdmin1@pragimtech.com</i> - <b>Super Admin role</b>
                        <i class="bi bi-person-circle icon-blue"></i> <!-- Clipboard icon -->
                    </p>
                </a>
            </div>

            <div class="d-flex align-content-center align-items-center">
                <a href="#" class="link-primary hover-link"
                   onclick="insertUserAndPassword('test')" title="Automatically paste username and password.">
                    <p>
                        <i>Test1@pragimtech.com</i> - <b>Test user</b>
                        <i class="bi bi-person-circle icon-blue"></i> <!-- Clipboard icon -->
                    </p>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="col-12">

            <h1>External Login</h1>
            <hr />
            @{
                if (Model.ExternalLogins.Count == 0)
                {
                    <div>No external logins configured</div>
                }
                else
                {
                    @* ExternalLogin action is defaulting to AccountController *@
                    <form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                        <div>
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit" class="btn @(provider.DisplayName == "Google" ? "btn-outline-danger" : "btn-outline-primary" ) mb-1"
                                        name="provider" value="@provider.Name"
                                        title="Log in using your @provider.DisplayName account">
                                    @provider.DisplayName ↗
                                </button>
                            }
                        </div>
                    </form>
                }
            }
        </div>

        <hr />

        <div class="mt-3 d-flex align-content-center align-items-center col-12">
            <p>
                <b>Important note</b> - External authentication may not work when behind a proxy server.
                It may arise <a href="~/docs/internal server error - googleauthentication.html" target="_blank">this error ↗</a>.
            </p>
        </div>
    </div>


</div>

<script>
    function insertUserAndPassword(selection) {
        const emailInput = document.getElementById('emailInput');
        const passwordInput = document.getElementById('passwordInput');
        const rememberInput = document.getElementById('rememberInput');
        var content = '';

        console.log(selection);

        emailInput.value = '';
        passwordInput.value = '';

        switch (selection) {
            case 'admin':
                content = 'Pragim1@pragimtech.com';
                break;
            case 'superAdmin':
                content = 'SuperAdmin1@pragimtech.com';
                break;
            case 'test':
                content = 'Test1@pragimtech.com';
                break;
            default:
                content = 'Something went wrong';
                console.log('Something went wrong')
        }

        // Set the same value for email and password fields
        emailInput.value = content;
        passwordInput.value = content;
        rememberInput.checked = true;

        // Optional: Log action or provide feedback
        console.log("Credentials autofilled.");
    }
</script>