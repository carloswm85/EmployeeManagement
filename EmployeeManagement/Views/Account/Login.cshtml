@model LoginViewModel

@{
    ViewBag.Title = "User Login";
}

<h1>User Login</h1>

<div class="row col-6">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-2">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" id="emailInput" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" id="passwordInput" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" id="rememberInput" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>

    <div class="mt-3 d-flex align-content-center align-items-center">
        <a href="#" class="link-primary hover-link"
           onclick="insertUserAndPassword('admin')" title="Automatically paste username and password.">
            <p>
                <i>Pragim1@pragimtech.com</i> - <b>Admin role</b>
                <i class="bi bi-person-circle icon-blue"></i> <!-- Clipboard icon -->
            </p>
        </a>
    </div>

    <div class="d-flex align-content-center align-items-center">    
        <a href="#" class="link-primary hover-link"
           onclick="insertUserAndPassword('superAdmin')" title="Automatically paste username and password.">
            <p>
                <i>SuperAdmin1@pragimtech.com</i> - <b>Super Admin role</b>
                <i class="bi bi-person-circle icon-blue"></i> <!-- Clipboard icon -->
            </p>
        </a>
    </div>

    <div class="d-flex align-content-center align-items-center">
        <a href="#" class="link-primary hover-link"
           onclick="insertUserAndPassword('test')" title="Automatically paste username and password.">
            <p>
                <i>Test1@pragimtech.com</i> - <b>Test user</b>
                <i class="bi bi-person-circle icon-blue"></i> <!-- Clipboard icon -->
            </p>
        </a>
    </div>
</div>

<script>
    function insertUserAndPassword(selection) {
        const emailInput = document.getElementById('emailInput');
        const passwordInput = document.getElementById('passwordInput');
        const rememberInput = document.getElementById('rememberInput');
        var content = '';

        console.log(selection);

        emailInput.value = '';
        passwordInput.value = '';

        switch (selection) {
            case 'admin':
                content = 'Pragim1@pragimtech.com';
                break;
            case 'superAdmin':
                content = 'SuperAdmin1@pragimtech.com';
                break;
            case 'test':
                content = 'Test1@pragimtech.com';
                break;
            default:
                content = 'Something went wrong';
                console.log('Something went wrong')
        }

        // Set the same value for email and password fields
        emailInput.value = content;
        passwordInput.value = content;
        rememberInput.checked = true;

        // Optional: Log action or provide feedback
        console.log("Credentials autofilled.");
    }
</script>